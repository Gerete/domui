<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsl="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0"><modelVersion>4.0.0</modelVersion>
  <groupId>nl.itris.external</groupId>
  <artifactId>junit.junit</artifactId>
  <name>junit-4.8.2.jar</name>
  <version>trunk-SNAPSHOT</version>
  <packaging>jar</packaging>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>Do the immensely complex task of copying a single file to the repository in only 29 lines of xml. Welcome to the joys of Maven.</id>
            <phase>verify</phase>
            <goals>
              <goal>run</goal>
              </goals>
            <configuration>
              <tasks>
                <copy overwrite="true" file="../../junit-4.8.2.jar" tofile="${project.build.directory}/${project.artifactId}-${project.version}.jar">
                  </copy>
                </tasks>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </build>
  </project>
